{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "rules": {
    "semi": [2, "always"],
    "curly": "error",
    "quotes": ["warn", "single"],
    "no-undef": "error",
    "space-before-function-paren": 0,
    "spaced-comment": "error"
  }
  // prettier semi - remove semicolons when formatting
}
